<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/detailTitleLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion au BLE en cours"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="52dp" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="@+id/detailTitleLoader"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/detailTitleLoader"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleLoader" />

    <TextView
        android:id="@+id/detailLoader"
        android:layout_width="93dp"
        android:layout_height="23dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/loader"
        tools:layout_editor_absoluteX="159dp" />
</androidx.constraintlayout.widget.ConstraintLayout>